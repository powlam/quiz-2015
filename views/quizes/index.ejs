    <form method='get' action='/quizes'>
    	<p>
    		<input type='text' name='search' value='' placeholder='Buscador de preguntas' />
    		<input type='submit' value='Enviar'/>
		</p>
	</form>

    <% if (quizes.length > 0) { %>
    <hr/>

    <table>
    <% var i; for (i=0; i < quizes.length; i++) { %>
    	<tr>
    		<td>
    			<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
            </td>
            <td>
                <a href="quizes/<%= quizes[i].id %>/edit"><input type="button" value="editar"/></a>
            </td>
            <td>
                <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                    <input type="submit" value="borrar" onclick="return confirm('Borrar: <%= quizes[i].pregunta %>');"/>
                </form>
			</td>
    	</tr>
    <% } %>
    </table>
    <% } %>

    <a href="/quizes/new"><input type="button" value="Crear pregunta"/></a>
